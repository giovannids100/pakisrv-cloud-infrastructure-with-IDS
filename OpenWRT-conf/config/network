
config interface 'loopback'
	option device 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config globals 'globals'
	option ula_prefix 'fdd8:db83:aa8a::/48'

config interface 'wan'
	option device 'eth1'
	option proto 'static'
	list ipaddr '192.168.1.104/24'
	option gateway '192.168.1.1'
	list dns '192.168.1.1'
	list dns '1.1.1.1'

config interface 'lan'
	option device 'eth0'
	option proto 'static'
	option ipaddr '10.0.1.1'
	option netmask '255.255.255.0'
	list dns '192.168.1.1'
	list dns '1.1.1.1'
	option gateway '192.168.1.104'

config interface 'lan2'
	option proto 'static'
	option device 'eth2'
	option ipaddr '10.0.2.1'
	option netmask '255.255.255.0'
	list dns '192.168.1.1'
	list dns '1.1.1.1'
	option gateway '192.168.1.104'

config interface 'wazuhlan'
	option proto 'static'
	option device 'eth3'
	list ipaddr '10.0.255.1/24'
	list dns '192.168.1.1'
	list dns '1.1.1.1'
	option gateway '192.168.1.104'

